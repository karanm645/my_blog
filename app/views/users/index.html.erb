<h1 align="center">All Users</h1> 
<div align="center">
  <% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <p><%= link_to gravatar_for(@article.user), user_path(@article.user) %></p>
      <li class="article-title"><%= link_to @article.user.username, user_path(@article.user) %></li>
      <p><small><%= pluralize(user.articles.count, "article") if @article.user.articles %></small></p>
    </div>
    </div>
  </ul>
  <% end %>
</div>
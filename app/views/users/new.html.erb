<%= render 'layouts/navigation' %>

<%= form_with scope: :users, url: users_path do |form| %>
  <div class="form-group">

    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.text_field :password, class: "form-control" %>
  </div>

  <%= form.submit @user.new_record?  ? "Sign up" : "Update account", class: "btn btn-primary" %>
  <%= link_to "Back", articles_path, class: "btn btn-primary" %>
<% end %>